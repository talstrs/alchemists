<!-- Widget: Instagram -->
<aside class="widget card widget--sidebar widget-instagram">
	<div class="widget__title card__header">
		<h4>Gallery Widget</h4>
	</div>
	<div class="widget__content card__content">
		<ul id="instagram-feed-alt" class="widget-instagram__list widget-instagram__list--4cols">
			{{#each football.sp.player.instagram}}
			<li class="widget-instagram__item">
				<a href="{{link}}" class="widget-instagram__link-wrapper" target="_blank">
					<span class="widget-instagram__plus-sign">
						<img src="{{image}}" class="widget-instagram__img" alt="" />
					</span>
				</a>
			</li>
			{{/each}}
		</ul>
	</div>
</aside>
<!-- Widget: Instagram / End -->
