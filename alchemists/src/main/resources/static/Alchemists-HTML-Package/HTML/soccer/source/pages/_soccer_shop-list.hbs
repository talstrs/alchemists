---
layout: soccer
page-title: Shop
page-heading: "Shop <span class=\"highlight\">List</span>"

breadcrumbs: [
	{
		label: "Shop"
	}
]
---

<!-- Content
================================================== -->
<div class="site-content">
	<div class="container">

		<div class="row">

			<!-- Products -->
			<div class="col-lg-9 order-lg-2">

				<!-- Shop List -->
				<div class="card card--clean">
					<header class="card__header card__header--shop-filter">

						{{> _soccer_shop-filter}}

					</header>
					<div class="card__content">

						<!-- Products -->
						<ul class="products products--list products--list-condensed">

							{{#each (limit soccer.products.shop 6)}}
							<!-- Product #{{@key}} -->
							<li class="product__item card">

								{{#if onsale}}
								<span class="onsale">
									<span class="onsale__inner">Sale!</span>
								</span>
								{{/if}}

								<div class="product__img">
									<div class="product__img-holder">
										<img src="{{../root}}assets/images/soccer/samples/{{img}}" alt="">
									</div>
								</div>

								<div class="product__content card__content">

									<header class="product__header">
										<div class="product__header-inner">
											<span class="product__category">{{category}}</span>
											<h2 class="product__title"><a href="_soccer_shop-product.html">{{title}}</a></h2>
											<div class="product__ratings">
												{{#repeat rating.full}}
												<i class="fas fa-star"></i>
												{{/repeat}}
												{{#repeat rating.empty}}
												<i class="fas fa-star empty"></i>
												{{/repeat}}
											</div>
										</div>
										<div class="product__price">
											{{#if onsale}}
												<del>{{price.old}}</del>
												<ins>{{price.new}}</ins>
											{{else}}
												{{price}}
											{{/if}}
										</div>
									</header>

									<div class="product__excerpt">
										{{excerpt}}
									</div>

									<footer class="product__footer">
										<a href="_soccer_shop-cart.html" class="btn btn-primary-inverse btn-icon product__add-to-cart"><i class="icon-bag"></i> Add to Cart</a>
										<a href="#" class="btn btn-default btn-single-icon product__wish"><i class="icon-heart"></i></a>
										<a href="#" class="btn btn-default btn-single-icon product__view"><i class="icon-eye"></i></a>
									</footer>
								</div>
							</li>
							<!-- Product #{{@key}} / End -->
							{{/each}}

						</ul>
						<!-- Products / End -->
					</div>
				</div>
				<!-- Shop List / End -->

				{{> _soccer_shop-pagination custom-class="justify-content-end"}}

			</div>
			<!-- Products / End -->

			<!-- Sidebar -->
			<div class="sidebar sidebar--shop col-lg-3 order-lg-1">

				{{> widget-categories}}

				{{> widget-filter-color}}

				{{> widget-filter-size-boxed}}

				{{> widget-filter-price}}

				{{> _soccer_widget-products}}

			</div>
			<!-- Sidebar / End -->

		</div>

	</div>
</div>

<!-- Content / End -->
