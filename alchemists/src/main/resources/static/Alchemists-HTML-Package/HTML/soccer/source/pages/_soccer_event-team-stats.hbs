---
layout: soccer
page-title: Event - Team Stats
event-header: true
---

{{> _soccer_event-nav}}

<!-- Content
================================================== -->
<div class="site-content">
	<div class="container">

		<div class="row">

			<!-- Content -->
			<div class="content col-lg-8">

				{{> _soccer_game-scoreboard-stats additional_stats="true"}}

				<div class="row">
					<div class="col-md-6">

						{{> _soccer_widget-pie-chart-1}}

					</div>
					<div class="col-md-6">

						{{> _soccer_widget-pie-chart-2}}

					</div>
				</div>

			</div>
			<!-- Content / End -->

			<!-- Sidebar -->
			<div class="sidebar col-lg-4">

				<!-- Widget: Latest Results - Team #1 -->
				<div class="widget card widget--sidebar widget-results">
					<div class="widget__title card__header">
						<h4>Alchemists Last Games</h4>
					</div>
					<div class="widget__content card__content">
						<ul class="widget-results__list">

							{{#each soccer.sp.event.schedule.team1}}
							<!-- Game #{{@key}} -->
							<li class="widget-results__item">
								<div class="widget-results__header justify-content-center">
									<div class="widget-results__title">{{date}}</div>
								</div>
								<div class="widget-results__content">
									<div class="widget-results__team widget-results__team--first">
										<figure class="widget-results__team-logo">
											<img src="{{../root}}assets/images/{{team1.logo}}" alt="">
										</figure>
										<div class="widget-results__team-details">
											<h5 class="widget-results__team-name">{{team1.name}}</h5>
											<span class="widget-results__team-info">{{team1.place}}</span>
										</div>
									</div>
									<div class="widget-results__result">
										<div class="widget-results__score">
											<span class="widget-results__score-{{#if team1.result.outcome.win}}winner{{else}}loser{{/if}}">{{team1.result.score}}</span> - <span class="widget-results__score-{{#if team2.result.outcome.win}}winner{{else}}loser{{/if}}">{{team2.result.score}}</span>
											<div class="widget-results__status">{{event_place}}</div>
										</div>
									</div>
									<div class="widget-results__team widget-results__team--second">
										<figure class="widget-results__team-logo">
											<img src="{{../root}}assets/images/{{team2.logo}}" alt="">
										</figure>
										<div class="widget-results__team-details">
											<h5 class="widget-results__team-name">{{team2.name}}</h5>
											<span class="widget-results__team-info">{{team2.place}}</span>
										</div>
									</div>
								</div>
							</li>
							<!-- Game #{{@key}} / End -->
							{{/each}}

						</ul>
					</div>
				</div>
				<!-- Widget: Latest Results - Team #1 / End -->

				<!-- Widget: Latest Results - Team #2 -->
				<div class="widget card card--alt-color widget--sidebar widget-results">
					<div class="widget__title card__header">
						<h4>Clovers Last Games</h4>
					</div>
					<div class="widget__content card__content">
						<ul class="widget-results__list">

							{{#each soccer.sp.event.schedule.team2}}
							<!-- Game #{{@key}} -->
							<li class="widget-results__item">
								<div class="widget-results__header justify-content-center">
									<div class="widget-results__title">{{date}}</div>
								</div>
								<div class="widget-results__content">
									<div class="widget-results__team widget-results__team--first">
										<figure class="widget-results__team-logo">
											<img src="{{../root}}assets/images/{{team1.logo}}" alt="">
										</figure>
										<div class="widget-results__team-details">
											<h5 class="widget-results__team-name">{{team1.name}}</h5>
											<span class="widget-results__team-info">{{team1.place}}</span>
										</div>
									</div>
									<div class="widget-results__result">
										<div class="widget-results__score">
											<span class="widget-results__score-{{#if team1.result.outcome.win}}winner{{else}}loser{{/if}}">{{team1.result.score}}</span> - <span class="widget-results__score-{{#if team2.result.outcome.win}}winner{{else}}loser{{/if}}">{{team2.result.score}}</span>
											<div class="widget-results__status">{{event_place}}</div>
										</div>
									</div>
									<div class="widget-results__team widget-results__team--second">
										<figure class="widget-results__team-logo">
											<img src="{{../root}}assets/images/{{team2.logo}}" alt="">
										</figure>
										<div class="widget-results__team-details">
											<h5 class="widget-results__team-name">{{team2.name}}</h5>
											<span class="widget-results__team-info">{{team2.place}}</span>
										</div>
									</div>
								</div>
							</li>
							<!-- Game #{{@key}} / End -->
							{{/each}}

						</ul>
					</div>
				</div>
				<!-- Widget: Latest Results - Team #2 / End -->

			</div>
			<!-- Sidebar / End -->
		</div>
	</div>
</div>
<!-- Content / End -->
