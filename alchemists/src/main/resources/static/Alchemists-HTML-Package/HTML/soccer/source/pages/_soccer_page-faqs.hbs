---
layout: soccer
page-title: FAQs
page-heading: "FAQs"

breadcrumbs: [
	{
		label: "FAQs"
	}
]
---

<!-- Content
================================================== -->
<div class="site-content">
	<div class="container">

		<div class="row justify-content-center">
			<div class="col-lg-8">

				<!-- FAQs -->
				<div class="accordion accordion--space-between" id="accordionFaqs">

					{{#each soccer.faqs}}
					<div class="card">
						<div class="card__header" id="heading-{{@index}}">
							<h5 class="mb-0">
								<button class="btn btn-link accordion__header-link {{#unless active}}collapsed{{/unless}}" type="button" data-toggle="collapse" data-target="#collapse-{{@index}}" aria-expanded="{{#if active}}true{{else}}false{{/if}}" aria-controls="collapse-{{@index}}">
									{{title}}
									<span class="accordion__header-link-icon"></span>
								</button>
							</h5>
						</div>
						<div id="collapse-{{@index}}" class="collapse {{#if active}}show{{/if}}" aria-labelledby="heading-{{@index}}" data-parent="#accordionFaqs">
							<div class="card__content">
								{{{content}}}
							</div>
						</div>
					</div>
					{{/each}}

				</div>
				<!-- FAQs / End -->

			</div>
		</div>

	</div>
</div>

<!-- Content / End -->
