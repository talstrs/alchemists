---
layout: soccer
page-title: Standings
page-heading: "Team <span class=\"highlight\">Standings</span>"

breadcrumbs: [
	{
		label: "Team",
		link: "_soccer_team-overview.html"
	},
	{
		label: "Standings"
	}
]
---

{{> _soccer_team-filter}}

<!-- Content
================================================== -->
<div class="site-content">
	<div class="container">

		<!-- Team Standings -->
		<div class="card card--has-table">
			<div class="card__header">
				<h4>West League 2016</h4>
			</div>
			<div class="card__content">
				<div class="table-responsive">
					<table class="table table-hover table-standings table-standings--full table-standings--full-soccer">
						<thead>
							<tr>
								<th class="team-standings__pos">Pos</th>
								<th class="team-standings__team">Teams</th>
								<th class="team-standings__played">Played</th>
								<th class="team-standings__win">Won</th>
								<th class="team-standings__lose">Lost</th>
								<th class="team-standings__drawn">Drawn</th>
								<th class="team-standings__goals-for">Goals For</th>
								<th class="team-standings__goals-against">Goals Against</th>
								<th class="team-standings__goals-diff">Goals Diff</th>
								<th class="team-standings__total-points">Total Points</th>
								<th class="team-standings__points-diff">Points Diff</th>
							</tr>
						</thead>
						<tbody>

							{{#each soccer.sp.team.standings}}
							<tr>
								<td class="team-standings__pos">{{pos}}</td>
								<td class="team-standings__team">
									<div class="team-meta">
										<figure class="team-meta__logo">
											<img src="assets/images/samples/logos/{{team.logo}}" alt="">
										</figure>
										<div class="team-meta__info">
											<h6 class="team-meta__name">{{team.name}}</h6>
											<span class="team-meta__place">{{team.place}}</span>
										</div>
									</div>
								</td>
								<td class="team-standings__played">{{played}}</td>
								<td class="team-standings__win">{{win}}</td>
								<td class="team-standings__lose">{{lose}}</td>
								<td class="team-standings__drawn">{{drawn}}</td>
								<td class="team-standings__goals-for">{{goals-for}}</td>
								<td class="team-standings__goals-against">{{goals-against}}</td>
								<td class="team-standings__goals-diff">{{goals-diff}}</td>
								<td class="team-standings__total-points">{{total-points}}</td>
								<td class="team-standings__points-diff">{{points-diff}}</td>
							</tr>
							{{/each}}

						</tbody>
					</table>
				</div>
			</div>
		</div>
		<!-- Team Standings / End -->

	</div>
</div>

<!-- Content / End -->
