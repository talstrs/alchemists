<!-- Widget: Featured Player -->
<aside class="widget card widget--sidebar widget-player widget-player--soccer">
	<div class="widget__title card__header">
		<h4>Players Overview</h4>
	</div>

	{{#each soccer.sp.event.players.mvp}}
	<div class="widget__content card__content">
		<div class="widget-player__ribbon">
			<div class="fas fa-star"></div>
		</div>
		<figure class="widget-player__photo">
			<img src="{{../root}}{{info.img}}" alt="{{info.fname}} {{info.lname}}">
		</figure>
		<header class="widget-player__header clearfix">
			<div class="widget-player__number">{{info.number}}</div>
			<h4 class="widget-player__name">
				<span class="widget-player__first-name">{{info.fname}}</span>
				<span class="widget-player__last-name">{{info.lname}}</span>
			</h4>
		</header>
		<div class="widget-player__content">
			<div class="widget-player__content-inner">
				{{#each stats.main}}
				<div class="widget-player__stat widget-player__{{slug}}">
					<div class="widget-player__stat-number">{{value}}</div>
					<h6 class="widget-player__stat-label">{{label}}</h6>
				</div>
				{{/each}}
			</div>

			<div class="widget-player__content-alt">
				{{#each progress-bars}}
				<!-- Progress: {{label}} -->
				<div class="progress-stats">
					<div class="progress__label">{{label}}</div>
					<div class="progress">
						<div class="progress__bar" role="progressbar" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100" style="width: {{value}}%;"></div>
					</div>
					<div class="progress__number">{{value}}%</div>
				</div>
				<!-- Progress: {{label}} / End -->
				{{/each}}
			</div>
		</div>
	</div>
	{{/each}}

	{{#each soccer.sp.event.players.other}}
	<div class="table-responsive">
		<table class="table alc-table-stats alc-widget-player__table">
			<thead>
				<tr>
					{{#each thead}}
					<th>{{label}}</th>
					{{/each}}
				</tr>
			</thead>
			<tbody>
				{{#each tbody}}
				<tr>
					<td>
						<div class="alc-widget-player__table-player">
							<div class="alc-widget-player__table-icon">
								<div class="alc-widget-player__table-icon-wrap">
									<i class="icon-svg icon-{{icon}}"></i>
								</div>
							</div>
							<div class="alc-widget-player__table-info">
								<h5 class="alc-widget-player__table-title">{{name}}</h5>
								<span class="alc-widget-player__table-subtitle">{{pos}}</span>
							</div>
						</div>
					</td>
					<td>
						<img src="{{../root}}{{team.logo}}" alt="{{team.name}}">
					</td>
					<td>
						<div class="alc-widget-player__table-stat">
							<div class="alc-widget-player__table-value">{{stat.value}}</div>
							<div class="alc-widget-player__table-label">{{stat.label}}</div>
						</div>
					</td>
				</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
	{{/each}}

</aside>
<!-- Widget: Featured Player / End -->
