<!-- Widget: Team Leaders -->
<aside class="widget widget--sidebar card card--has-table widget-leaders">
	<div class="widget__title card__header">
		<h4>Team Goalscorers</h4>
	</div>
	<div class="widget__content card__content">

		<!-- Leader: Points -->
		<div class="table-responsive">
			<table class="table team-leader">
				<thead>
					<tr>
						<th class="team-leader__type">West League 2016</th>
						<th class="team-leader__goals">G</th>
						<th class="team-leader__gp">P</th>
						<th class="team-leader__avg">AVG</th>
					</tr>
				</thead>
				<tbody>

					{{#each soccer.sp.team.leaders}}
					<tr>
						<td class="team-leader__player">
							<div class="team-leader__player-info">
								<figure class="team-leader__player-img team-leader__player-img--sm">
									<img src="{{../root}}assets/images/soccer/samples/{{thumb}}" alt="">
								</figure>
								<div class="team-leader__player-inner">
									<h5 class="team-leader__player-name">{{name}}</h5>
									<span class="team-leader__player-position">{{position}}</span>
								</div>
							</div>
						</td>
						<td class="team-leader__goals">{{stats.goals}}</td>
						<td class="team-leader__gp">{{stats.gp}}</td>
						<td class="team-leader__avg">
							<div class="circular">
								<div class="circular__bar" data-percent="{{stats.percent}}">
									<span class="circular__percents">{{stats.label}}</span>
								</div>
							</div>
						</td>
					</tr>
					{{/each}}

				</tbody>
			</table>
		</div>
		<!-- Leader: Points / End -->


	</div>
</aside>
<!-- Widget: Team Leaders / End -->
